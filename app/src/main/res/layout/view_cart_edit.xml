<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_marginTop="68dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:id="@+id/Rlv_popup"
        android:background="@drawable/drawable_border_mobile_dialogue"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/Btn_dismiss"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/btn_confirm"

            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_corner"
            android:paddingLeft="22dp"
            android:paddingRight="22dp"
            android:text="Cancel"
            android:textColor="#fff"
            android:textSize="19sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/Rlv_header"
            android:background="@android:color/black"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/loginbutton"
                android:text="Remove"
                android:textColor="#3c3b3b" />

            <TextView
                android:id="@+id/txtvw_tittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/button5"
                android:text="Soup"
                android:textColor="@android:color/background_light"
                android:textSize="15sp" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_confirm"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@+id/nbrkfastlayout"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_corner"
            android:paddingLeft="22dp"
            android:paddingRight="22dp"
            android:text="Update"
            android:textColor="#fff"
            android:textSize="19sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/nbrkfastlayout"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/nbdec1"
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:layout_alignTop="@+id/nbincdec"
                android:layout_marginRight="5dp"
                android:layout_toStartOf="@+id/nbincdec"
                android:src="@drawable/minus_icon" />

            <TextView
                android:id="@+id/nbincdec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"

                android:text="1"
                android:textColor="@android:color/darker_gray"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/nbinc1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignTop="@+id/nbincdec"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@+id/nbincdec"
                android:src="@drawable/plus_icon" />

        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs 110"
        android:textColor="@android:color/black"
        android:textSize="35sp"
        android:textStyle="italic"
        android:layout_marginTop="90dp"
        android:layout_alignTop="@+id/Rlv_popup"
        android:layout_centerHorizontal="true" />

</RelativeLayout>