<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/iphonebg">

    <!-- Login progress -->
    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Shipping Adress"
            android:textColor="@android:color/white"
            android:textSize="17dp" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_arrow_back_black_24dp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp">


        <RelativeLayout
            android:id="@+id/rlv_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentTop="true">


            <EditText
                android:id="@+id/editText7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_alignEnd="@+id/editText6"
                android:layout_alignLeft="@+id/editText6"
                android:layout_alignRight="@+id/editText6"
                android:layout_alignStart="@+id/editText6"
                android:layout_below="@+id/editText6"
                android:layout_marginTop="18dp"
                android:background="@drawable/bordercolour"
                android:ems="10"
                android:hint="Phone Number"
                android:inputType="phone"
                android:padding="10dp"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editText6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_alignEnd="@+id/editText5"
                android:layout_alignLeft="@+id/editText5"
                android:layout_alignRight="@+id/editText5"
                android:layout_alignStart="@+id/editText5"
                android:layout_below="@+id/editText5"
                android:layout_marginTop="18dp"
                android:background="@drawable/bordercolour"
                android:ems="10"
                android:hint="Zip Code"
                android:padding="10dp"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editText5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_alignEnd="@+id/editText"
                android:layout_alignLeft="@+id/editText"
                android:layout_alignRight="@+id/editText"
                android:layout_alignStart="@+id/editText"
                android:layout_below="@+id/editText"
                android:layout_marginTop="18dp"
                android:background="@drawable/bordercolour"
                android:ems="10"
                android:hint="Province"
                android:padding="10dp"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editText4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_alignEnd="@+id/editText3"
                android:layout_alignLeft="@+id/editText3"
                android:layout_alignRight="@+id/editText3"
                android:layout_alignStart="@+id/editText3"
                android:layout_below="@+id/editText3"
                android:layout_marginTop="18dp"
                android:background="@drawable/bordercolour"
                android:ems="10"
                android:hint="City"
                android:padding="10dp"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/editText2"
                android:layout_below="@+id/editText2"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/bordercolour"
                android:ems="10"
                android:hint="Address"
                android:padding="10dp"
                android:textSize="20dp" />


            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentBottom="true"


                android:layout_alignTop="@+id/textView3"
                android:layout_marginTop="5dp"
                android:adjustViewBounds="true" />


            <EditText
                android:id="@+id/editText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@+id/imageView2"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/bordercolour"
                android:ems="10"
                android:hint="Full Name"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText1"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/bordercolour"
                android:ems="10"
                android:hint="Email Address"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textSize="20dp" />


            <Spinner
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:layout_alignEnd="@+id/editText4"
                android:layout_alignLeft="@+id/editText4"
                android:layout_alignRight="@+id/editText4"
                android:layout_alignStart="@+id/editText4"
                android:layout_below="@+id/editText4"
                android:layout_marginTop="18dp"
                android:background="@drawable/bordercolour"
                android:ems="10"
                android:hint="Country"
                android:padding="10dp"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="45dp"

                android:layout_alignEnd="@+id/editText7"
                android:layout_alignLeft="@+id/editText7"
                android:layout_alignRight="@+id/editText7"
                android:layout_alignStart="@+id/editText7"
                android:layout_below="@+id/editText7"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/login_buttonn"
                android:text="Continue"
                android:textColor="#ffffff"
                android:textColorHighlight="@android:color/background_light"
                android:textColorLink="@android:color/background_light"
                android:textSize="20dp" />


        </RelativeLayout>


    </ScrollView>


</RelativeLayout>
